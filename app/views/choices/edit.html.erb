<div align="center"><img src="/assets/starfield.jpg" class="background"></div>
<section id='new-choice-form' class="container form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :choice, url: {action: "update"}, method: "patch" do |f| %>
        <fieldset>
          <h1 class="text-center">New Choice</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="story">Story</label>
            <div class="col-md-8">
              <%= f.text_area :story, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="container">
            <div class="form-group">
              <label class="col-md-4 control-label" for="choiceAtext">First Choice</label>
              <div class="col-md-8">
                <%= f.text_field :choice_a_text, required: true, class: "form-control" %><br>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= button_to "Edit This Path", new_child_path, method: "get", class: "edit btn btn-warning" %>
              </div>
            </div>
          </div>

          <div class="container">
            <div class="form-group">
              <label class="col-md-4 control-label" for="choiceBtext">Second Choice</label>
              <div class="col-md-8">
                <%= f.text_field :choice_b_text, required: true, class: "form-control" %><br>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= button_to "Edit This Path", new_child_path, method: "get", class: "edit btn btn-warning" %>
              </div>
            </div>
          </div>

          <% if @choice.parent?%>
            <%= f.hidden_field :value => @choice.parent %>
          <% end %>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Save", class: "btn btn-success" %>
            </div>
          </div>
          
          
        </fieldset>
      <% end %>

    </div>
  </div>