<section id='new-choice-form' class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :choice, url: new_choice_path do |f| %>
        <fieldset>
          <legend>New Choice</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="story">Story</label>
            <div class="col-md-8">
              <%= f.text_area :story, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="choiceAtext">First Choice</label>
            <div class="col-md-8">
              <%= f.text_field :choiceAtext, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Edit This Path", class: "btn btn-success" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="choiceBtext">Second Choice</label>
            <div class="col-md-8">
              <%= f.text_field :choiceBtext, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Edit This Path", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>