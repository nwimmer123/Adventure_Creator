<section id='new-choice-form' class="container form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :choice, url: new_choice_path do |f| %>
        <fieldset>
          <h1 class="text-center">New Choice</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="story">Story</label>
            <div class="col-md-8">
              <%= f.text_area :story, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="choiceAtext">First Choice</label>
            <div class="col-md-8">
              <%= f.text_field :choice_a_text, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="choiceBtext">Second Choice</label>
            <div class="col-md-8">
              <%= f.text_field :choice_b_text, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Save", class: "btn btn-success" %>
            </div>
          </div>
          
          <% unless @parent.nil? %>
            <%= f.hidden_field :parent_id, :value => @parent.id %>
          <% end %>
          
        </fieldset>
      <% end %>

    </div>
  </div>