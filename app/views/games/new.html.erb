<section id='signup-form' class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :user, url: users_path do |f| %>
        <fieldset>
          <legend>New Game</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="title">Title</label>
            <div class="col-md-8">
              <%= f.text_field :title, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="backstory">Backstory</label>
            <div class="col-md-8">
              <%= f.text_area :email, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>